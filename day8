//Problem: Given integers a and b, compute a^b using recursion without using pow() function.

#include <stdio.h>
long long power(long long a, int b) {
    if (b == 0)
        return 1;
    if (b == 1)
        return a;
    return a * power(a, b - 1);
}
int main() {
    long long a;
    int b;
    scanf("%lld %d", &a, &b);
    printf("%lld", power(a, b));
    return 0;
}

